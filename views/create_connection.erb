<form role="form" action="/room/<%= @room.id %>/connections/new" method="post">
  <div class="form-group">
    <label>Connection Name: </label> <input class="form-control" type="text" name="name"><br>
    <label>Connecting Room: </label>
    <select class="form-control" name="connecting_room_id">
      <% @all_rooms.each do |room| %>
        <option value="<%= room.id %>"><%= room.id %> - <%= room.name %></option>
      <% end %>
    </select>
    <br />
    <input type="Submit">
  </div>
</form>
